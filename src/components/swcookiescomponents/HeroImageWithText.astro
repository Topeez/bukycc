---
const {
  title = await Astro.slots.render('title'),
  // subtitle = await Astro.slots.render('subtitle'),
  // tagline,

  // content = await Astro.slots.render('content'),
  // actions = await Astro.slots.render('actions'),
  // //Image is imported this way: import HeroImage from "~/assets/images/hero-min.png" and passed to the component like this: image={HeroImage.src}
  image = await Astro.slots.render('image'),

  id,
} = Astro.props;
import LogoImage from '~/assets/images/smrtak.png';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
---

<section
  id={id}
  class="relative w-full grid grid-cols-1 md:grid-cols-12 items-center py-16 px-6 md:px-12 lg:px-20 bg-cover bg-center text-white min-h-[50vh] md:min-h-[60vh] lg:min-h-[70vh] xl:min-h-[80vh] 2xl:min-h-[90vh] gap-5"
  style={`background-image: url('${image}')`}
>
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-[rgba(255,27,220,0.2)] to-[rgba(16,86,165,0.2)] z-0"></div>

  <div
    class="col-span-1 md:col-span-6 relative z-10 max-w-4xl text-center md:text-left bg-white bg-opacity-90 p-4 rounded-lg shadow-2xl text-black grid grid-cols-1 gap-4 md:grid-cols-12 md:gap-8"
  >
    <div class="col-span-1 md:col-span-8 items-center justify-center align-middle reaper-container">
      {
        title && (
          <p class="text-4xl md:text-5xl font-bold leading-tight font-[Great] text-slate-700 mb-10">
            Kdy volat Bukyho?
          </p>
        )
      }
      <ul class="text-left w-full">
        <li class="text-xl md:text-2xl mt-4 flex flex-row gap-1 items-center">
          <Icon name="tabler:circle-check" class="text-purple-600 text-3xl" />Renovace odpadního potrubí
        </li>
        <li class="text-xl md:text-2xl mt-4 flex flex-row gap-1 items-center">
          <Icon name="tabler:circle-check" class="text-purple-600 text-3xl" />Tlakové čištění odpadů
        </li>
        <li class="text-xl md:text-2xl mt-4 flex flex-row gap-1 items-center">
          <Icon name="tabler:circle-check" class="text-purple-600 text-3xl" />Frézování kanalizace
        </li>
        <li class="text-xl md:text-2xl mt-4 flex flex-row gap-1 items-center">
          <Icon name="tabler:circle-check" class="text-purple-600 text-3xl" />Kamerový monitoring potrubí
        </li>
        <li class="text-xl md:text-2xl mt-4 flex flex-row gap-1 items-center">
          <Icon name="tabler:circle-check" class="text-purple-600 text-3xl" />Bezvýkopové opravy
        </li>
      </ul>
    </div>

    <Icon name="tabler:phone" class="text-gray-600 mt-10 col-span-1 md:col-span-4 hidden md:block self-center bounce" style={{
      fontSize: '10rem',
      transform: 'rotate(10deg)',
    }}/>
  </div>

  <div
    class="col-span-1 md:col-span-6 relative z-10 max-w-2xl flex flex-col items-center justify-center bg-opacity-80 p-4 rounded-lg"
  >
    <!-- {title && <h1 class="text-4xl md:text-5xl font-bold leading-tight font-[Great]">{title}</h1>}
    {subtitle && <h2 class="text-xl md:text-2xl mt-4">{subtitle}</h2>}
    {tagline && <p class="text-lg mt-2 italic">{tagline}</p>}
    {content && <div class="mt-6">{content}</div>}
    {actions && <div class="mt-6 flex flex-wrap gap-4">{actions}</div>} -->
    <Image
      src={LogoImage}
      alt="Buky.cc - oficiální logo"
      class="w-full h-full self-center reaper mx-auto shadow-inner"
    />
    <div class="btn btn-primary mx-auto self-center bg-slate-700 text-white border-2 border-white">
      +420 000 000 000
    </div>
  </div>
</section>
