---
const {
  title = await Astro.slots.render('title'),
  videoSrc = await Astro.slots.render('videoSrc'), // Main video source
  videoFallback = await Astro.slots.render('videoFallback'), // Fallback image for mobile/slow connections
  id,
} = Astro.props;
import { contactData } from '~/CONTACT';
const { phone, email } = contactData;
---

<section
  id={id}
  class="relative flex justify-center items-center gap-5 px-6 md:px-12 lg:px-20 py-16 w-full min-h-[50vh] md:min-h-[60vh] lg:min-h-[70vh] 2xl:min-h-[90vh] xl:min-h-[80vh] overflow-hidden text-white"
>
  <!-- Video Background -->
  <video
    id="hero-video"
    class="z-0 absolute inset-0 w-full h-full object-cover"
    autoplay
    muted
    loop
    playsinline
    poster={videoFallback}
  >
    <source src={videoSrc} type="video/mp4" />
    <!-- Fallback for browsers that don't support video -->
    Your browser does not support the video tag.
  </video>
  
  <!-- Dark overlay -->
  <div class="z-0 absolute inset-0 bg-black/60"></div>
  
  <!-- Radial mask that fades the background around content -->
  <div class="z-5 absolute inset-0 vertical-fade-mask"></div>
  
  <div class="z-10 relative flex justify-center items-center gap-4 md:gap-6 mx-auto text-center">
    <div class="flex flex-col justify-center items-center gap-8">
      {
        title && (
          <div class="space-y-4">
            <h1 class="mt-6 font-[OpenSans] font-bold text-white text-4xl sm:text-5xl md:text-6xl lg:text-7xl md:leading-[1.2] tracking-tighter">
              Buky Cleaning
            </h1>
            <h2 class="font-[OpenSans] font-bold text-white text-xl md:text-2xl">
              Čištění a renovace odpadů bez nutnosti sekání do zdi
            </h2>
            <h3 class="p-3 w-full font-[Great] font-bold text-gradient text-2xl md:text-4xl text-center reaper-container">
              <i>Tam, kde jiní končí, my začínáme</i>
            </h3>
          </div>
        )
      }
      <div class="flex items-center gap-8 font-[OpenSans] font-bold">
        <a
          href="mailto:info@buky.cc"
          class="self-center bg-white/10 backdrop-blur-sm mx-auto border-2 border-white/50 text-white btn"
          >
          {email}
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
          </svg>
           
          </a
        >
        <a
          href={`tel:${phone}`}
          class="self-center bg-white/10 backdrop-blur-sm mx-auto border-2 border-white/50 text-white btn"
        >
          {phone}
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
          </svg>
          
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.getElementById('hero-video');
    
    if (video instanceof HTMLVideoElement) {
      // Set playback speed (0.5 = half speed, 2.0 = double speed, etc.)
      video.playbackRate = 0.9; // Adjust this value for desired speed
      
      // Alternative: Set speed after video loads
      video.addEventListener('loadeddata', () => {
        video.playbackRate = 0.9; // Slower playback
      });
    }
  });
</script>